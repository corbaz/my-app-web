{
  "name": "my-app",
  "version": "1.0.0",
  "scripts": {
    "tailwind": "bun tailwindcss -i ./frontend/src/styles.css -o ./frontend/src/tailwind.min.css --minify --watch",
    "compiler-ts": "bun build frontend/src/main.ts --outdir frontend/src --minify --watch",
    "live-server": "live-server frontend/src/",
    "dev-frontend": "concurrently \"bun run tailwind\"  \"bun run compiler-ts\" \"bun run live-server\"",
    "build-dist": "html-minifier-terser --input-dir frontend/src --output-dir frontend/dist --collapse-whitespace --remove-comments --minify-css true --minify-js true",
    "deploy": "surge frontend/dist --domain bun-ts.surge.sh",
    "publish": "bun run build-dist && bun run deploy"
  },
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.0.1",
    "html-minifier-terser": "^7.2.0",
    "live-server": "^1.2.2",
    "surge": "^0.24.6",
    "tailwindcss": "^3.4.14"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  }
}
